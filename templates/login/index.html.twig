{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container-fluid">
<div class="row m-0 justify-content-center">
    <div class="col-sm-5 mt-5 p-3 alert-secondary rounded bg-light ">
			<h5 class="col mb-3 text-center text-success">Login</h5>

				<form class="forme" action="{{ path('app_login') }}" method="post">
					<label for="username">Email:</label>
					<input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required>

					<label for="password">Password:</label>
					<input type="password" id="password" class="form-control mt-2" name="_password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="https://127.0.0.1:8000/Accueil" value="{{ path('Accueil') }}"> 

        <button class="btn btn-success  p-1 m-1 mt-3" type="submit">Connexion</button>
    </form>
			
